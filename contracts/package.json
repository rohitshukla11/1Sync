{
  "name": "1sync-htlc-contracts",
  "version": "1.0.0",
  "description": "Cross-chain HTLC contracts for Ethereum and Stellar",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:ethereum": "hardhat run scripts/deploy.js --network",
    "deploy:stellar": "cd stellar && cargo build --target wasm32-unknown-unknown --release",
    "deploy:mock-token": "hardhat run scripts/deploy-mock-token.js --network sepolia",
    "test:mock-token": "hardhat run scripts/test-mock-token.js --network sepolia",
    "interact:ethereum": "hardhat run scripts/interact.js --network sepolia",
    "interact:stellar": "node scripts/stellar-interact.js",
    "test:deployed": "npm run interact:ethereum && npm run interact:stellar",
    "test:contract": "hardhat run scripts/test-deployed.js --network sepolia",
    "test:original": "hardhat run scripts/interact-original.js --network sepolia"
  },
  "keywords": [
    "htlc",
    "atomic-swap",
    "ethereum",
    "stellar",
    "cross-chain"
  ],
  "author": "1Sync Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0"
  }
}
